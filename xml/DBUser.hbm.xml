<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="zdarzeniowka.DBUser" table="user">

        <id name="idUser" type="int" column="idUser">
            <generator class="native" />
        </id>
        
		 <property name="firstName" column="firstName" type="string"/>
		 <property name="lastName" column="lastName" type="string"/>
		 <property name="email" column="email" type="string"/>
		 <property name="albumNo" column="albumNo" type="int"/>
		 <many-to-one name="port" column="idPort" unique="true" class="zdarzeniowka.DBPort" not-null="true"/>
		 <set name="devices" cascade="all">
			<key column="idUser"/>
			<one-to-many class="zdarzeniowka.DBUserDevice"/>
		</set>
		<many-to-one name="room" column="idRoom" class="zdarzeniowka.DBRoom" not-null="true"/>
         	
    </class>
</hibernate-mapping>
